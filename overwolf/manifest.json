{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Discord Soundboard",
    "version": "1.0.0.0",
    "minimum-overwolf-version": "0.77.10",
    "author": "Discord Soundboard Team",
    "icon": "icon.png",
    "icon_gray": "icon_gray.png",
    "description": "Discord soundboard with hotkey support"
  },
  "permissions": [
    "Hotkeys"
  ],
  "data": {
    "start_window": "MainWindow",
    "windows": {
      "MainWindow": {
        "file": "index.html",
        "transparent": false,
        "resizable": true,
        "show_in_taskbar": true,
        "size": {
          "width": 1200,
          "height": 800
        },
        "min_size": {
          "width": 800,
          "height": 600
        }
      }
    },
    "hotkeys": {
      "discord_soundboard_hotkey": {
        "title": "Discord Soundboard Hotkey",
        "action-type": "custom",
        "default": "Ctrl+Alt+H"
      }
    }
  }
}
